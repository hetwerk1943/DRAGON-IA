{
  "name": "dragon-ia",
  "version": "1.0.0",
  "description": "DRAGON-IA - Backend + Frontend (produkcja) Node.js / Express",
  "main": "main.js",
  "scripts": {
    "start": "node main.js",
    "test": "jest --coverage",
    "test:e2e": "playwright test",
    "lint": "prettier --check \"**/*.{html,js,css,json}\" --ignore-path .gitignore",
    "format": "prettier --write \"**/*.{html,js,css,json}\" --ignore-path .gitignore",
    "validate": "node --check main.js && node --check src/app.js"
  },
  "keywords": [
    "dragon-ia",
    "pwa",
    "ai"
  ],
  "license": "MPL-2.0",
  "jest": {
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/tests/e2e/"
    ]
  },
  "devDependencies": {
    "@playwright/test": "^1.42.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.2.0",
    "serve": "^14.2.5"
  }
}
